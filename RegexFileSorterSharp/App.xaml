<Application x:Class="RegexFileSorter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RegexFileSorterSharp"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             StartupUri="WMain.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <System:String x:Key="DFolder">TextBox</System:String>
            <Style TargetType="MenuItem">
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Button.xaml" />
                <ResourceDictionary Source="/Styles/ImageButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>